---
interface Props {
	title: string;
  description?: string;
}

const { title, description = 'Welcome to my Astro site!' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | erere</title>
    {/* Basic styles can be kept or removed if Tailwind is fully handling styling */}
    <style>
      body { margin: 0; } /* Minimal reset if Tailwind handles the rest */
    </style>
	</head>
	<body class="bg-gray-100 text-gray-800 font-sans"> {/* Example Tailwind classes */}
    <div class="container mx-auto p-4 max-w-3xl">
      <header class="mb-8">
        <nav class="flex space-x-4">
          <a href="/" class="text-blue-600 hover:underline">Home</a>
          <a href="/blog/" class="text-blue-600 hover:underline">Blog</a>
        </nav>
      </header>
      <main class="bg-white p-6 rounded-lg shadow-md">
		    <slot />
      </main>
      <footer class="text-center mt-8 text-gray-600 text-sm">
        <p>&copy; {new Date().getFullYear()} erere</p>
      </footer>
    </div>
	</body>
</html>